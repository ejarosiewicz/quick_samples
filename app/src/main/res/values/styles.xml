<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Wallpaper.NoTitleBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@android:color/transparent</item>

    </style>

    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/dialog_title</item>
    </style>

    <style name="dialog_title" parent="android:Widget.TextView">
        <item name="android:background">@color/head_color</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
